<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/correct_questions_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/incorrect_questions_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="@string/correct_questions" />

    <TextView
        android:id="@+id/incorrect_questions_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/total_questions_tv"
        app:layout_constraintEnd_toEndOf="@+id/correct_questions_tv"
        app:layout_constraintStart_toStartOf="@+id/correct_questions_tv"
        app:layout_constraintTop_toBottomOf="@+id/correct_questions_tv"
        tools:text="@string/incorrect_questions" />

    <TextView
        android:id="@+id/total_questions_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/grade_tv"
        app:layout_constraintEnd_toEndOf="@+id/incorrect_questions_tv"
        app:layout_constraintStart_toStartOf="@+id/incorrect_questions_tv"
        app:layout_constraintTop_toBottomOf="@+id/incorrect_questions_tv"
        tools:text="@string/total_questions" />

    <TextView
        android:id="@+id/grade_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/total_questions_tv"
        app:layout_constraintStart_toStartOf="@+id/total_questions_tv"
        app:layout_constraintTop_toBottomOf="@+id/total_questions_tv"
        tools:text="@string/grade" />

</android.support.constraint.ConstraintLayout>